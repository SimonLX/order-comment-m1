<?xml version="1.0"?>
<config>
    <sections>
        <checkout>
            <groups>
                <comment translate="label">
                    <label>Order comment</label>
                    <sort_order>150</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <display_in_cart translate="label">
                            <label>Display in cart</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </display_in_cart>
                        <cart_field_comment translate="label">
                            <label>Field comment displayed in cart</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <comment>The text you want to display under the textarea</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cart_field_comment>
                    </fields>
                </comment>
            </groups>
        </checkout>
    </sections>
</config>
